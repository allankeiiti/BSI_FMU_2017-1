public class Aluno {
    String nome;
    double valorMensalidade;
    
    public void setNome(){
        this.nome = nome;
    }
    public void setMensalidade(){
        this.valorMensalidade = valorMensalidade;
    }
    
    public String getNome(){
        return (nome);
    }
    public double getvalorMensalidade(){
        return (valorMensalidade);
    }
    
    public double calcula(double porcentagem){
        double novaMensalidade;
        novaMensalidade = valorMensalidade * porcentagem;
        return (novaMensalidade);
    }         

